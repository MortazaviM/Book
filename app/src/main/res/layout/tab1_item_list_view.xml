<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/book_pic_tab1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/photo264868310023252131"

        />

<TextView
    android:id="@+id/txt_title1_tab1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@id/book_pic_tab1"
    android:text="The Road"
    android:textColor="@android:color/black"
    android:textSize="25dp"


    />

    <TextView

        android:id="@+id/txt_title2_tab1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/book_pic_tab1"
        android:text="by Cormac"
        android:layout_below="@+id/txt_title1_tab1"
        android:textColor="@android:color/darker_gray"
        android:textSize="25dp"
        />

    <TextView

        android:id="@+id/txt_title3_tab1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/book_pic_tab1"
        android:text="McCarty"
        android:layout_below="@+id/txt_title2_tab1"
        android:textColor="@android:color/darker_gray"
        android:textSize="25dp"
        />


</RelativeLayout>

